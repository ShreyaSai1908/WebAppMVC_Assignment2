@model PeopleViewModel
@{
    ViewData["Title"] = "ViewPeople";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View People</h1>

<div>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Address</th>
        </tr>
        @foreach (Person person in Model.AllPeople)
        {
            <tr>
                <th>@person.FirstName</th>
                <th>@person.LastName</th>
                <th>@person.PhoneNumber</th>
                <th>@person.Address</th>
            </tr>
        }
    </table>
    
</div>